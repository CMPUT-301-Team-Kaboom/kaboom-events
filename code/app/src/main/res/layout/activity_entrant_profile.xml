<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <TextView
        android:id="@+id/SettingsTitle"
        style="@style/MainHeaderTextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Profile box -->
    <LinearLayout
        android:id="@+id/profileBox"
        style="@style/SectionBoxStyle"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/SettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ProfileIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/ProfileHeader"
            style="@style/MainHeaderTextviewStyle"
            android:text="Profile"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- Info box -->
    <LinearLayout
        android:id="@+id/infoBox"
        style="@style/SectionBoxStyle"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/profileBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/HeaderRoundedEditTextStyle"
            android:text="Edit Name"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etName"
            style="@style/BodyRoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="First Last"
            android:inputType="textPersonName"/>

        <TextView
            style="@style/HeaderRoundedEditTextStyle"
            android:text="Edit Email"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editEmail"
            style="@style/BodyRoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="example@email.com"
            android:inputType="textEmailAddress"/>

        <TextView
            style="@style/HeaderRoundedEditTextStyle"
            android:text="Edit Phone Number"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editPhone"
            style="@style/BodyRoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="XXX-XXX-XXXX"
            android:inputType="phone"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/notifBox"
        style="@style/SectionBoxStyle"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/infoBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvNotifications"
            style="@style/MainHeaderTextviewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Enable Notifications"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSignOut"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="14dp"
        android:text="Sign Out"
        android:backgroundTint="@color/secondaryBackground"
        app:layout_constraintTop_toBottomOf="@id/notifBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDeleteProfile"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="Delete Profile"
        android:textColor="#FF3333"
        android:backgroundTint="@color/secondaryBackground"
        app:layout_constraintTop_toBottomOf="@id/btnSignOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>