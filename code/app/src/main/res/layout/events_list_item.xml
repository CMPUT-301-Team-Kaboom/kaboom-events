<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_item_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_container">

    <ImageView
        android:id="@+id/iv_event_item_poster"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/default_image_icon"
        android:scaleType="centerCrop"/>

    <HorizontalScrollView
        android:id="@+id/hsv_event_item_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_event_item_poster"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_event_item_poster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/BodyListViewItem"
                android:id="@+id/tv_event_item_organizer"
                android:text="Organizer"/>

            <TextView
                style="@style/HeaderListViewItem"
                android:id="@+id/tv_event_item_name"
                android:text="Event Name" />

            <TextView
                style="@style/BodyListViewItem"
                android:id="@+id/tv_event_item_draw_date"
                android:text="Drawn on dd/month/YYYY" />

            <TextView
                style="@style/BodyListViewItem"
                android:id="@+id/tv_event_item_attendees"
                android:text="Attendees: XX" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        style="@style/BodyRoundedEditTextStyle"
        android:id="@+id/tv_event_item_size"
        android:text="XXX/XXX"
        android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>